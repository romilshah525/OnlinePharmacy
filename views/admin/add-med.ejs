		<title>Medi-life Store</title>
	</head>
	<body>
		<%- include("../includes/navBar.ejs") %>
		<div class="login" style="margin-top: 50px;margin-bottom: 50px;">
			<% if (edit) { %>
				<h1 id="header" >ADMIN EDIT MEDICINE</h1>
			<% } else { %>
				<h1 id="header" >ADMIN ADD MEDICINE</h1>
			<% } %>
			<main>
					<% if (edit) { %>
						<form action="/admin/medicine/<%= medicine.id %>" method="POST" id="form"   >
					<% } else { %>
						<form action="/admin/add-medicine" id="form" method="POST">
					<% } %>
					<!-- <label for="name">name</label>
					<input type="text" name="name" value="<% if (edit) { %><%= medicine.name %><% } %>">
					<label for="expDate">expDate</label> -->
	
					<input type="text" placeholder="Name of the medicine" maxlength="20" value="<% if (edit) { %><%= medicine.name %><% } %>" name="name"><br />
					<input type="number" placeholder="Capacity per pack" maxlength="20" value="<% if (edit) { %><%= medicine.capacity %><% } %>" name="capacity"><br />
					<!-- <input type="text" placeholder="Name of the company" maxlength="20"><br /> -->
					<!-- <input type="number" placeholder="Price"><br /> -->
					<!-- <input type="text" placeholder="Type of medicine"><br /> -->
					<% if (edit) { %>
						<label for="expDate"><%= medicine.expDate.getDate() +"/" + (medicine.expDate.getMonth()+1) + "/" +medicine.expDate.getFullYear() %></label>
						<br>
					<% } else { %>
						<input type="date" placeholder="Expiry date" name="expDate"><br />
						<!-- <input type="date" name="expDate"> -->
					<% } %>
					<!-- <label for="price">price</label> -->
					<input type="text" name="price" placeholder="Price in Rs." value="<% if (edit) { %><%= medicine.price %><% } %>">
					<button type="submit"><% if (edit) { %>Update Medicine<% } else { %>Add Medicine<% } %></button>
				</form>
			</main>
		</div>
		<%- include("../includes/footer.ejs") %>