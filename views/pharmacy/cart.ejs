            var current_fs, next_fs, previous_fs; 
      $(".next").click(function() {
        current_fs = $(this).parent();
        next_fs = $(this)
          .parent()
          .next();
        $("#progressbar li")
          .eq($("fieldset").index(next_fs))
          .addClass("active");
        next_fs.show();
        current_fs.hide();
      });

      $(".previous").click(function() {
        current_fs = $(this).parent();
        previous_fs = $(this)
          .parent()
          .prev();
        $("#progressbar li")
          .eq($("fieldset").index(current_fs))
          .removeClass("active");
        previous_fs.show();
        current_fs.hide();
      });

      $(".submit").click(function() {
        return false;
      });
        </script>
