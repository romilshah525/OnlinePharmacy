    <body>
        <%- include("../includes/navBar.ejs") %>
        <main>

            <h1 class="text-center">Bill Details</h1>
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="card" style="box-shadow: 5px 5px 5px 5px #575757;">
                                    <div class="card-body p-0">
                                        <div class="row p-1">
                                            <div class="col-md-6">
                                                <!-- <img src="http://via.placeholder.com/400x90?text=logo"> -->
                                            </div>
                    
                                            <div class="col-md-1 text-right">
                                                <p class="font-weight-bold mb-1"></p>
                                                <p class="text-muted" style="font-size: 18px;"><b>Invoice</b></p>
                                            </div>
                                        </div>
                    
                                        <!-- <hr class="my-5"> -->
                    
                                        <div class="row pb-3 p-1">
                                            <div class="col-md-6">
                                                <p class="font-weight-bold mb-1">Client Information</p>
                                                <p class="mb-0">Name: <%=user.name%></p>
                                                <!-- <p>Acme Inc</p> -->
                                                <p class="mb-0">Address: <%=user.address%></p>
                                                <!-- <p class="mb-1">6781 45P</p> -->
                                            </div>
                    
                                            <!-- <div class="col-md-6 text-right">
                                                <p class="font-weight-bold mb-4">Payment Details</p>
                                                <p class="mb-1"><span class="text-muted">VAT: </span> 1425782</p>
                                                <p class="mb-1"><span class="text-muted">VAT ID: </span> 10253642</p>
                                                <p class="mb-1"><span class="text-muted">Payment Type: </span> Root</p>
                                                <p class="mb-1"><span class="text-muted">Name: </span> John Doe</p>
                                            </div> -->
                                        </div>
                    
                                        <div class="row p-2">
                                            <div class="col-md-12">
                                                <table class="table">
                                                    <%let i = 0; %>
                                                    <thead>
                                                        <tr>
                                                            <th class="border-0 text-uppercase small font-weight-bold">ID</th>
                                                            <th class="border-0 text-uppercase small font-weight-bold">Item</th>
                                                            <!-- <th class="border-0 text-uppercase small font-weight-bold">Description</th> -->
                                                            <th class="border-0 text-uppercase small font-weight-bold">Quantity</th>
                                                            <th class="border-0 text-uppercase small font-weight-bold">Unit Cost</th>
                                                            <th class="border-0 text-uppercase small font-weight-bold">Total</th>
                                                        </tr>
                                                    </thead>
                                                    
                                                    <% medicines.forEach( medicine => { %>
                                                        <tr>
                                                                <th class="border-0 text-uppercase small font-weight-bold"><%=i+=1;%></th>
                                                                <th class="border-0 text-uppercase small font-weight-bold"><%=medicine.medicine.name%></th>
                                                                <!-- <th class="border-0 text-uppercase small font-weight-bold">Description</th> -->
                                                                <th class="border-0 text-uppercase small font-weight-bold"><%=medicine.quantity%></th>
                                                                <th class="border-0 text-uppercase small font-weight-bold"><%=medicine.medicine.price%></th>
                                                                <th class="border-0 text-uppercase small font-weight-bold"><%=medicine.medicine.price * medicine.quantity%></th>
                                                            </tr>
                                                    <% })%>
                                                    
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                    
                                        <div class="d-flex flex-row-reverse p-1">
                                            <div class="py-3 px-5 text-right">
                                                <div class="mb-2">Grand Total</div>
                                                <div class="h2 font-weight-light"><%= amt%></div>
                                            </div>
                    
                                            <!-- <div class="py-3 px-5 text-right">
                                                <div class="mb-2">Discount</div>
                                                <div class="h2 font-weight-light">10%</div>
                                            </div>
                    
                                            <div class="py-3 px-5 text-right">
                                                <div class="mb-2">Sub - Total amount</div>
                                                <div class="h2 font-weight-light">$32,432</div>
                                            </div>   -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- <div class="text-light mt-5 mb-5 text-center small">by : <a class="text-light" target="_blank" href="http://totoprayogo.com">totoprayogo.com</a></div> -->
                    
                    </div>
                    <br>
                    <form action="/order" method="post">
                        <button type="submit" class="btn btn-default">Place Order</button>
                </form>
                <br><br>
                </body>
            </html>
            </main>
