<%- include('../includes/header.ejs') %>
        <% if (admin) { %><link rel="stylesheet" href="/css/addMedicine.css"><% } %>
        <title><%= pageTitle %></title>
    </head>
    <body>
        <%- include("../includes/navBar.ejs") %>
        <main>
            <h1><%= mainContent %></h1>
            <% if (admin) { %><h2>Admin Logged In</h2>
            <% } else { %> <h2>User LoggedIn</h2> <% } %>
            <% if (length > 0) { %>
                <table style = "width : 50%" border="1px">
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Medicine Type</th>
                        <th>Expiry Date</th>
                    </tr>
                    <% for (let medicine of medicines) { %>
                    <tr>
                        <td><%= medicine.name %></td>
                        <td><%= medicine.price %></td>
                        <td><%= medicine.medType %></td>
                        <td><%= medicine.expDate.getDate() +"/" + (medicine.expDate.getMonth()+1) + "/" +medicine.expDate.getFullYear() %></td>
                        <% if (admin) { %>
                            <td><button><a href="/admin/addMed/<%= medicine.id %>?edit=true">Edit Medicine</a></button></td>
                            <td><button><a href="/admin/medList/<%= medicine.id %>">Delete Medicine</a></button></td>
                        <% } else { %>
                            <td>
                                <form method="post" action="/cart">
                                    <button>Add To Cart</button>
                                    <input type="hidden" name="medId" value="<%= medicine.id %>">
                                    <!-- <% console.log(medicine.id) %> -->
                                </form>
                            </td>
                        <% } %>
                    </tr>
                    <% } %>
                </table>
            <% } else { %>
                <h3>No medicines found!</h3>
            <% } %>
        </main>
    <%- include("../includes/footer.ejs") %>